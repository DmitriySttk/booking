<h2>Edit Profile
  <% resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, label: false, autofocus: true, class: "form-control", placeholder: "Email" %>
    <br/>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                required: false,
                label: false,
                class: "form-control", placeholder: "Password (leave it blank if you don't want to change it)",
                input_html: {autocomplete: "new-password"} %>
    <br/>
    <%= f.input :password_confirmation,
                required: false,
                label: false,
                class: "form-control", placeholder: "Password",
                input_html: {autocomplete: "new-password"} %>
    <br/>
    <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                label: false,
                class: "form-control", placeholder: "Current password",
                input_html: {autocomplete: "current-password"} %>
  </div>
  <br/>
  <div class="form-actions">
    <%= f.button :submit, "Update", class: "btn btn-info" %>
    <%= link_to "Back", :back, class: "btn btn-secondary" %>
  </div>
<% end %>
<br/><br/>

<div class="card">
  <div class="card-header">
    <h3>Cancel my account</h3>
  </div>
  <div class="card-body">
    <h5 class="card-title">Unhappy?</h5>
    <p class="card-text">:(</p>
    <p><%= link_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger", data: {confirm: "Are you sure?"}, method: :delete %></p>
  </div>
</div>
<br/>


